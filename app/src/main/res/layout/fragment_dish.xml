<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/dish_fragment"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/dish_fragment_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:paddingBottom="@dimen/nav_bar_height">

        <LinearLayout
            android:id="@+id/dish_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingBottom="24dp">

            <EditText
                android:id="@+id/search_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="Gõ tên món ăn."
                android:paddingLeft="8dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_loaimon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Loại món"
                android:textColor="@color/title"
                android:textSize="24sp"
                app:fontFamily="sans-serif-medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"

                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_kho"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_kho"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/kho" />

                    <TextView
                        android:id="@+id/tv_kho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Món khô"
                        android:textColor="@color/content"
                        android:textSize="18sp"
                        android:typeface="sans"
                        app:fontFamily="sans-serif-light" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_nuoc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_nuoc"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/nuoc" />

                    <TextView
                        android:id="@+id/tv_nuoc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Món nước"
                        android:textColor="@color/content"
                        android:textSize="18sp"
                        app:fontFamily="sans-serif-light" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_chay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_chay"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/chay" />

                    <TextView
                        android:id="@+id/tv_chay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Món chay"
                        android:textColor="@color/content"
                        android:textSize="18sp"
                        app:fontFamily="sans-serif-light" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_nguyenlieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Nguyên liệu"
                android:textColor="@color/title"
                android:textSize="24sp"
                app:fontFamily="sans-serif-medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_ga"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_ga"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ga" />

                    <TextView
                        android:id="@+id/tv_ga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Món gà"
                        android:textColor="@color/content"
                        android:textSize="18sp"
                        app:fontFamily="sans-serif-light" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_ca"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_ca"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ca" />

                    <TextView
                        android:id="@+id/tv_ca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Món cá"
                        android:textColor="@color/content"
                        android:textSize="18sp"
                        app:fontFamily="sans-serif-light" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_bo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_bo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/bo" />

                    <TextView
                        android:id="@+id/tv_bo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Món bò"
                        android:textColor="@color/content"
                        android:textSize="18sp"
                        app:fontFamily="sans-serif-light" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_heo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_heo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/heo" />

                    <TextView
                        android:id="@+id/tv_heo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Món heo"
                        android:textColor="@color/content"
                        android:textSize="18sp"
                        app:fontFamily="sans-serif-light" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_tom"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_tom"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/tom" />

                    <TextView
                        android:id="@+id/tv_tom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Món tôm"
                        android:textColor="@color/content"
                        android:textSize="18sp"
                        app:fontFamily="sans-serif-light" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_rau"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_rau"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/rau" />

                    <TextView
                        android:id="@+id/tv_rau"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Món rau"
                        android:textColor="@color/content"
                        android:textSize="18sp"
                        app:fontFamily="sans-serif-light" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_monan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Món ăn"
                android:textColor="@color/title"
                android:textSize="24sp"
                app:fontFamily="sans-serif-medium" />

            <ProgressBar
                android:id="@+id/dish_progress_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>

